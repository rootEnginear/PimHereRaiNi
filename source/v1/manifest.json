{
    "manifest_version":2,
    "name": "PimHereRaiNi",
    "version":"1.0",
    "description": "Decode a message that was forgotten switching between TH/EN keyboard",
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["content.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "browser_action":{
        "default_icon":{
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup":"popup/popup.html",
        "default_title":"พิมพ์เฮียไรนิ?"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}